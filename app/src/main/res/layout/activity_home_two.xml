<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="greenstory.rtg.com.HomeActivity">

        <!-- As the main content view, the view below consumes the entire
     space available using match_parent in both dimensions. -->

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="21dp">


        <ImageView
            android:id="@+id/israel_map_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:contentDescription="israel map"
            android:src="@drawable/shvil_map" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="צפון"
            android:textSize="60dp"
            android:textAlignment="center"
            android:textColor="@color/rtgGreen"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="מרכז"
            android:textAlignment="center"
            android:textSize="60dp"
            android:textColor="@color/rtgGreen"
            android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/RTG_info"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="17dp"
                android:layout_weight="1"
                android:text="דרום"
                android:textAlignment="center"
                android:textColor="@color/rtgGreen"
                android:textSize="60dp" />

        </LinearLayout>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/RTG_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:gravity="start"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="6dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="מי שמטייל יותר, נהנה יותר וזוכה יותר! בחנות הוירטואלית שלנו תוכלו להשתמש בנקודות ולזכות בפרסים שווים!"
            android:textColor="@color/rtgGreen"
            android:textSize="@dimen/text_small" />

    </RelativeLayout>

        <!-- android:layout_gravity="start" tells DrawerLayout to treat
             this as a sliding drawer on the left side for left-to-right
             languages and on the right side for right-to-left languages.
             The drawer is given a fixed width in dp and extends the full height of
             the container. A solid background is used for contrast
             with the content view. -->
        <ListView
            android:id="@+id/left_drawer_list"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:background="#fff"/>

</android.support.v4.widget.DrawerLayout>


